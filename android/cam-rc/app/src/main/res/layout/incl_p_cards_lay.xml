<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.inspirationpoint.inspirationrc.rc.ui.activity.FightActivityVM" />
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_title_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".015" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_title_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".07" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_divider_1_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".085" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_black1_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".155" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_black1_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".255" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_black2_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".745" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_black2_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".845" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_black_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".14" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_black_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".24" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_cancel1_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".14" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_cancel1_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".27" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_cancel2_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".73" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_cancel2_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".86" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_cancel_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".42" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_left_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".12" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_left_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".29" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_right_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".71" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_right_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".88" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_cards_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".54" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_cards_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".735" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_divider_2_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".48" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_back_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85" />

    <android.support.constraint.Guideline
        android:id="@+id/p_cards_back_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".92" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/fa_p_warnings"
        android:textColor="@color/textColorSecondary"
        android:id="@+id/p_cards_title"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/p_cards_title_top"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_title_bottom"
        app:layout_constraintStart_toStartOf="@id/p_cards_title_left"
        app:layout_constraintEnd_toEndOf="@id/p_cards_title_right"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/p_cards_divider_top"
        android:background="@color/white"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/p_cards_divider_1_top" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="P"
        android:textColor="@color/white"
        android:id="@+id/p_cards_black1"
        android:textAlignment="center"
        android:background="@drawable/p_card_black"
        android:onClick="@{() -> viewModel.onPBlackLeft()}"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/p_cards_black_top"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_black_bottom"
        app:layout_constraintStart_toStartOf="@id/p_cards_black1_left"
        app:layout_constraintEnd_toEndOf="@id/p_cards_black1_right"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="P"
        android:textColor="@color/white"
        android:id="@+id/p_cards_black2"
        android:background="@drawable/p_card_black"
        android:textAlignment="center"
        android:onClick="@{() -> viewModel.onPBlackRight()}"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/p_cards_black_top"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_black_bottom"
        app:layout_constraintStart_toStartOf="@id/p_cards_black2_left"
        app:layout_constraintEnd_toEndOf="@id/p_cards_black2_right"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/p_cards_cancel_1"
        android:src="@drawable/krest_white"
        android:onClick="@{() -> viewModel.onPCancelLeft()}"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_cancel_bottom"
        app:layout_constraintStart_toStartOf="@id/p_cards_cancel1_left"
        app:layout_constraintEnd_toEndOf="@id/p_cards_cancel1_right"
        app:layout_constraintDimensionRatio="h,1:1"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/p_cards_cancel_2"
        android:src="@drawable/krest_white"
        android:onClick="@{() -> viewModel.onPCancelRight()}"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_cancel_bottom"
        app:layout_constraintStart_toStartOf="@id/p_cards_cancel2_left"
        app:layout_constraintEnd_toEndOf="@id/p_cards_cancel2_right"
        app:layout_constraintDimensionRatio="h,1:1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/p_cards_divider_2_bottom" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="P"
        android:textColor="@color/white"
        android:id="@+id/p_cards_left"
        android:textAlignment="center"
        android:background="@{viewModel.leftPCard == viewModel.CARD_STATE_NONE ? @drawable/p_card_yellow : @drawable/p_card_red}"
        android:onClick="@{() -> viewModel.onPCardLeft()}"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/p_cards_cards_top"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_cards_bottom"
        app:layout_constraintStart_toStartOf="@id/p_cards_left_left"
        app:layout_constraintEnd_toEndOf="@id/p_cards_left_right"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="P"
        android:textColor="@color/white"
        android:padding="-20dp"
        android:id="@+id/p_cards_right"
        android:background="@{viewModel.rightPCard == viewModel.CARD_STATE_NONE ? @drawable/p_card_yellow : @drawable/p_card_red}"
        android:textAlignment="center"
        android:onClick="@{() -> viewModel.onPCardRight()}"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/p_cards_cards_top"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_cards_bottom"
        app:layout_constraintStart_toStartOf="@id/p_cards_right_left"
        app:layout_constraintEnd_toEndOf="@id/p_cards_right_right"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:id="@+id/p_cards_back"
        android:textAlignment="center"
        android:onClick="@{() -> viewModel.onCloseBtn()}"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/p_cards_back_top"
        app:layout_constraintBottom_toBottomOf="@id/p_cards_back_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>

</layout>