<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="camera"
            type="ru.inspirationpoint.inspirationrc.manager.coreObjects.Device" />
    </data>

    <LinearLayout
        android:layout_width="@dimen/card_height"
        android:layout_height="@dimen/card_height"
        android:background="@drawable/checkbox_empty_dark"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/camera"
            android:textSize="@dimen/main_font_size" />

        <TextView
            android:id="@+id/camera_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@{camera.name}"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="@dimen/large_font_size" />


    </LinearLayout>

</layout>