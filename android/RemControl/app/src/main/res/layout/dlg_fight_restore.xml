<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/textColorSecondary"
        android:textSize="22sp"
        android:textAlignment="center"
        android:id="@+id/restore_title"
        android:layout_gravity="center_horizontal"
        android:text="@string/unfinished_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/restore_data_names"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/restore_data_score"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:id="@+id/restore_data_other"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/textColorSecondary"
            android:id="@+id/unfinished_accept"
            android:text="@string/unfinished_accept"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/textColorSecondary"
            android:id="@+id/unfinished_cancel"
            android:text="@string/cancel"/>
    </RelativeLayout>


</LinearLayout>