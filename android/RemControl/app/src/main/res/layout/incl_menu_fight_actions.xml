<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.inspirationpoint.remotecontrol.ui.activity.FightActivityVM" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.constraint.Guideline
            android:id="@+id/timers_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".015" />

        <android.support.constraint.Guideline
            android:id="@+id/timers_title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".07" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".085" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".11" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item1_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".18" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item1text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".185" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item1text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".215" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".24" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_text_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".52" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_text_2_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".55" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".26" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item2_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".51" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_3_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".57" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item3_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".59" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item3title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".66" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_item3_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".85" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_4_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".87" />

        <android.support.constraint.Guideline
            android:id="@+id/msett_cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".89" />

        <android.support.constraint.Guideline
            android:id="@+id/msett_cancel_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".97" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_timers_period_score"
            android:textColor="@color/textColorSecondary"
            android:id="@+id/options_title"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/timers_title_top"
            app:layout_constraintBottom_toBottomOf="@id/timers_title_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_1"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_1_top" />

        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:id="@+id/menu_fa_divider_1_1"
            android:background="@color/white"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_1_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_divider_2_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="P"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_passive_icon"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_item1_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_item1_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/menu_fa_divider_1_1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/passive_timer"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_passive_text"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_item1text_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_item1text_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/menu_fa_divider_1_1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/menu_fa_passive_btn"
            android:layout_marginStart="30dp"
            android:onClick="@{() -> viewModel.onMenuPassive()}"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_1_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_divider_2_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/menu_fa_divider_1_1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/menu_fa_medicine_icon"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/btn_med"
            app:layout_constraintTop_toTopOf="@id/menu_fa_item1_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_item1_bottom"
            app:layout_constraintStart_toStartOf="@id/menu_fa_divider_1_1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_medical_pause"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_medical_text"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_item1text_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_item1text_bottom"
            app:layout_constraintStart_toStartOf="@id/menu_fa_divider_1_1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/menu_fa_medical_btn"
            android:layout_marginStart="30dp"
            android:onClick="@{() -> viewModel.onMenuMedical()}"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_1_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_divider_2_top"
            app:layout_constraintStart_toStartOf="@id/menu_fa_divider_1_1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_2"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_2_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fight_timer_lowcase"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_text2"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_text_2_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_text_2_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_item2_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_item2_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/timers_dec_min_t"
                android:background="@color/colorPrimaryDark"
                android:layout_alignParentStart="true"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="3"
                app:np_value="@={viewModel.timerMinDec}"
                app:np_textSize="60sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/timers_unit_min_t"
                android:background="@color/colorPrimaryDark"
                android:layout_toEndOf="@id/timers_dec_min_t"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="9"
                app:np_value="@={viewModel.timerMinUnit}"
                app:np_textSize="60sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=":"
                android:textAlignment="center"
                android:textColor="@color/textColorSecondary"
                android:textSize="50sp"/>

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/timers_unit_sec_t"
                android:background="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="9"
                app:np_value="@={viewModel.timerSecUnit}"
                app:np_textSize="60sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/timers_dec_sec_t"
                android:background="@color/colorPrimaryDark"
                android:layout_toStartOf="@id/timers_unit_sec_t"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="5"
                app:np_value="@={viewModel.timerSecDec}"
                app:np_textSize="60sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_3"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_3_top" />

        <com.shawnlin.numberpicker.NumberPicker
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/period_np_timers"
            android:background="@color/colorPrimaryDark"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/transparent"
            app:np_min="1"
            app:np_textSize="40sp"
            app:np_selectedTextSize="60sp"
            app:np_wheelItemCount="5"
            android:layout_margin="10dp"
            app:np_wrapSelectorWheel="false"
            app:np_selectedTextColor="@color/textColorSecondary"
            app:np_textColor="@color/white"
            app:np_value="@={viewModel.period}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_item3title_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_item3_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/next_period"
            android:textColor="@color/white"
            android:id="@+id/period_next"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:onClick="@{() -> viewModel.onPeriodNext()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_item3_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_item3title_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_4"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_4_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:id="@+id/msett_cancel"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onCloseBtn()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/msett_cancel_top"
            app:layout_constraintBottom_toBottomOf="@id/msett_cancel_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</layout>