<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.inspirationpoint.remotecontrol.ui.activity.FightActivityVM" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.constraint.Guideline
            android:id="@+id/timers_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".015" />

        <android.support.constraint.Guideline
            android:id="@+id/timers_title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".07" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".09" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_timeout_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".11" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_timeout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".17" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".19" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_timer_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".21" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_timer_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".27" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_3_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".29" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_period_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".31" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_period_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".37" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_4_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".39" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_timer_set_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".41" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_timer_set_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".47" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_5_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".49" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_p_time_set_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".51" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_p_time_set_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".57" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_6_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".59" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_med_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".61" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_med_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".67" />

        <android.support.constraint.Guideline
            android:id="@+id/menu_fa_divider_7_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".69" />

        <android.support.constraint.Guideline
            android:id="@+id/msett_cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".86" />

        <android.support.constraint.Guideline
            android:id="@+id/msett_cancel_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".93" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_timers_period_score"
            android:textColor="@color/textColorSecondary"
            android:id="@+id/options_title"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/timers_title_top"
            app:layout_constraintBottom_toBottomOf="@id/timers_title_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_1"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_1_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_pause_full"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_pause"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onMenuPause()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_timeout_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_timeout_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_2"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_2_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/action_period"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_period"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onMenuPeriod()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_period_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_period_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_3"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_3_top" />





        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_4"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_4_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_fight_timer"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_timer"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onMenuTimer()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_timer_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_timer_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_5"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_5_top" />



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_6"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_6_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_medical_pause"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_med"
            android:onClick="@{() -> viewModel.onMenuMedical()}"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/menu_fa_timer_set_top"
            app:layout_constraintBottom_toBottomOf="@id/menu_fa_timer_set_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/menu_fa_divider_7"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/menu_fa_divider_7_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/close"
            android:textColor="@color/white"
            android:id="@+id/msett_cancel"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onCloseBtn()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/msett_cancel_top"
            app:layout_constraintBottom_toBottomOf="@id/msett_cancel_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</layout>