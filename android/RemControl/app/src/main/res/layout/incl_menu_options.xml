<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.inspirationpoint.inspirationrc.rc.ui.activity.FightActivityVM" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.constraint.Guideline
            android:id="@+id/options_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".015" />

        <android.support.constraint.Guideline
            android:id="@+id/options_title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".07" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".085" />

        <android.support.constraint.Guideline
            android:id="@+id/options_names_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".11" />

        <android.support.constraint.Guideline
            android:id="@+id/options_names_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".17" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".19" />

        <android.support.constraint.Guideline
            android:id="@+id/options_nation_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".21" />

        <android.support.constraint.Guideline
            android:id="@+id/options_nation_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".27" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_3_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".29" />

        <android.support.constraint.Guideline
            android:id="@+id/options_photo_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".31" />

        <android.support.constraint.Guideline
            android:id="@+id/options_photo_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".37" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_4_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".39" />

        <android.support.constraint.Guideline
            android:id="@+id/options_stage_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".41" />

        <android.support.constraint.Guideline
            android:id="@+id/options_stage_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".47" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_5_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".49" />

        <android.support.constraint.Guideline
            android:id="@+id/options_video_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".51" />

        <android.support.constraint.Guideline
            android:id="@+id/options_video_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".57" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_6_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".59" />

        <android.support.constraint.Guideline
            android:id="@+id/options_passive_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".61" />

        <android.support.constraint.Guideline
            android:id="@+id/options_passive_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".67" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_7_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".69" />

        <android.support.constraint.Guideline
            android:id="@+id/options_events_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".71" />

        <android.support.constraint.Guideline
            android:id="@+id/options_events_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".77" />

        <android.support.constraint.Guideline
            android:id="@+id/options_divider_8_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".79" />

        <android.support.constraint.Guideline
            android:id="@+id/options_ok_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".86" />

        <android.support.constraint.Guideline
            android:id="@+id/options_ok_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".93" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/options"
            android:textColor="@color/textColorSecondary"
            android:id="@+id/options_title"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/options_title_top"
            app:layout_constraintBottom_toBottomOf="@id/options_title_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_1"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_1_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/names"
            android:textColor="@color/white"
            android:id="@+id/options_names"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onMenuNames()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/options_names_top"
            app:layout_constraintBottom_toBottomOf="@id/options_names_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_2"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_2_top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/options_nation_top"
            app:layout_constraintBottom_toBottomOf="@id/options_nation_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/country_lay"
            android:clickable="@{!viewModel.withSEMI}"
            android:onClick="@{() -> viewModel.countryCheck()}">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="@string/country"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/country_check"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:checked="@{viewModel.isCountry}"
                android:src="@drawable/checkbox_selector_dark"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_3"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_3_top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/options_photo_top"
            app:layout_constraintBottom_toBottomOf="@id/options_photo_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/photo_lay"
            android:clickable="@{!viewModel.withSEMI}"
            android:onClick="@{() -> viewModel.photoCheck()}">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="@string/photo"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/photo_check"
                android:focusable="false"
                android:checked="@{viewModel.isPhoto}"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/checkbox_selector_dark"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_4"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_4_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/competition"
            android:textColor="@color/white"
            android:id="@+id/options_competition"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onMenuCompetition()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/options_stage_top"
            app:layout_constraintBottom_toBottomOf="@id/options_stage_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_5"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_5_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_medical_pause"
            android:textColor="@color/white"
            android:id="@+id/menu_fa_med"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onMenuMedical()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/options_video_top"
            app:layout_constraintBottom_toBottomOf="@id/options_video_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_6"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_6_top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/options_passive_top"
            app:layout_constraintBottom_toBottomOf="@id/options_passive_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/passive_lay"
            android:onClick="@{() -> viewModel.passiveCheck()}"
            >
            <!--android:clickable="@{!viewModel.withSEMI}"-->

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="@string/passive"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/passive_check"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:checked="@{viewModel.isPassive}"
                android:src="@drawable/checkbox_selector_dark"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_7"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_7_top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/options_events_top"
            app:layout_constraintBottom_toBottomOf="@id/options_events_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/events_lay"
            android:onClick="@{() -> viewModel.eventsCheck()}">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="@string/events"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/events_check"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:checked="@{viewModel.phrasesEnabled}"
                android:src="@drawable/checkbox_selector_dark"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/options_divider_8"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/options_divider_8_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:id="@+id/options_ok"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onOptionsOk()}"
            android:textAlignment="center"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/options_ok_top"
            app:layout_constraintBottom_toBottomOf="@id/options_ok_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>

</layout>