<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.inspirationpoint.remotecontrol.ui.activity.FightActivityVM" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.constraint.Guideline
            android:id="@+id/names_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".02" />

        <android.support.constraint.Guideline
            android:id="@+id/names_title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".075" />

        <android.support.constraint.Guideline
            android:id="@+id/names_divider_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".085" />

        <android.support.constraint.Guideline
            android:id="@+id/names_title_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".14" />

        <android.support.constraint.Guideline
            android:id="@+id/names_title_1_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".20" />

        <android.support.constraint.Guideline
            android:id="@+id/names_name_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".24" />

        <android.support.constraint.Guideline
            android:id="@+id/names_name_1_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".36" />

        <android.support.constraint.Guideline
            android:id="@+id/names_title_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".385" />

        <android.support.constraint.Guideline
            android:id="@+id/names_title_2_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".445" />

        <android.support.constraint.Guideline
            android:id="@+id/names_name_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".465" />

        <android.support.constraint.Guideline
            android:id="@+id/names_name_2_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".585" />

        <android.support.constraint.Guideline
            android:id="@+id/names_btn_ok_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".56" />

        <android.support.constraint.Guideline
            android:id="@+id/names_btn_ok_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".61" />

        <android.support.constraint.Guideline
            android:id="@+id/names_divider_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".63" />

        <android.support.constraint.Guideline
            android:id="@+id/names_btn_swap_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".65" />

        <android.support.constraint.Guideline
            android:id="@+id/names_btn_swap_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".70" />

        <android.support.constraint.Guideline
            android:id="@+id/names_divider_3_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".72" />

        <android.support.constraint.Guideline
            android:id="@+id/names_btn_cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".88" />

        <android.support.constraint.Guideline
            android:id="@+id/names_btn_cancel_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".93" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_surnames"
            android:textColor="@color/textColorSecondary"
            android:id="@+id/names_title"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/names_title_top"
            app:layout_constraintBottom_toBottomOf="@id/names_title_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/names_divider"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/names_divider_1_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/left_fighter_hint"
            android:textColor="@color/red"
            android:id="@+id/names_title_1"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/names_title_1_top"
            app:layout_constraintBottom_toBottomOf="@id/names_title_1_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/names_name_1_top"
            app:layout_constraintBottom_toBottomOf="@id/names_name_1_bottom"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ru.inspirationpoint.remotecontrol.ui.view.FightersAutoCompleteTextView
                android:id="@+id/left_fighter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:inputType="textCapSentences"
                android:paddingRight="32dp"
                app:configuration="@{viewModel.configLeft}"/>

            <ProgressBar
                android:id="@+id/left_fighter_progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="16dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/right_fighter_hint"
            android:textColor="@color/green"
            android:id="@+id/names_title_2"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/names_title_2_top"
            app:layout_constraintBottom_toBottomOf="@id/names_title_2_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/names_name_2_top"
            app:layout_constraintBottom_toBottomOf="@id/names_name_2_bottom"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ru.inspirationpoint.remotecontrol.ui.view.FightersAutoCompleteTextView
                android:id="@+id/right_fighter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:inputType="textCapSentences"
                android:paddingRight="32dp"
                app:configuration="@{viewModel.configRight}"/>

            <ProgressBar
                android:id="@+id/right_fighter_progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="16dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:id="@+id/names_btn_ok"
            android:textAlignment="center"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:onClick="@{() -> viewModel.onCloseBtn()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/names_btn_ok_top"
            app:layout_constraintBottom_toBottomOf="@id/names_btn_ok_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/names_divider_2"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/names_divider_2_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/swap_fighters"
            android:textColor="@color/white"
            android:id="@+id/names_btn_swap"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onSwapBtn()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/names_btn_swap_top"
            app:layout_constraintBottom_toBottomOf="@id/names_btn_swap_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/names_divider_3"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/names_divider_3_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:id="@+id/names_btn_cancel"
            android:textAlignment="center"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:onClick="@{() -> viewModel.onCloseBtn()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/names_btn_cancel_top"
            app:layout_constraintBottom_toBottomOf="@id/names_btn_cancel_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>

</layout>