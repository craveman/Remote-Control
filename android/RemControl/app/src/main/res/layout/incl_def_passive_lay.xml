<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.inspirationpoint.remotecontrol.ui.activity.FightActivityVM" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".015" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".07" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_divider_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".085" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_np_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".20" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_np_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".50" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_np_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".15" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_np_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".85" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_divider_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".65" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_ok_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".70" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_ok_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".75" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".88" />

        <android.support.constraint.Guideline
            android:id="@+id/defp_time_cancel_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".94" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/fa_def_p_time"
            android:textColor="@color/textColorSecondary"
            android:id="@+id/def_p_title"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/defp_time_title_top"
            app:layout_constraintBottom_toBottomOf="@id/defp_time_title_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/defp_time_divider"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/defp_time_divider_1_top" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/defp_time_np_top"
            app:layout_constraintBottom_toBottomOf="@id/defp_time_np_bottom"
            app:layout_constraintStart_toStartOf="@id/defp_time_np_left"
            app:layout_constraintEnd_toEndOf="@id/defp_time_np_right">

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/def_p_time_houn_sec"
                android:background="@color/colorPrimaryDark"
                android:layout_toStartOf="@id/def_p_time_dec_sec"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="9"
                app:np_value="@={viewModel.timerPDefSecHoun}"
                app:np_textSize="50sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/def_p_time_dec_sec"
                android:background="@color/colorPrimaryDark"
                android:layout_centerInParent="true"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="9"
                app:np_value="@={viewModel.timerPDefSecDec}"
                app:np_textSize="50sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/def_p_time_unit_sec"
                android:background="@color/colorPrimaryDark"
                android:layout_toEndOf="@id/def_p_time_dec_sec"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="9"
                app:np_value="@={viewModel.timerPDefSecUnit}"
                app:np_textSize="50sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/def_time_divider_2"
            android:background="@color/white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/defp_time_divider_2_top" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:id="@+id/def_time_ok"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onDefPTimeAccepted()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/defp_time_ok_top"
            app:layout_constraintBottom_toBottomOf="@id/defp_time_ok_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:id="@+id/def_time_cancel"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.onCloseBtn()}"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@id/defp_time_cancel_top"
            app:layout_constraintBottom_toBottomOf="@id/defp_time_cancel_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

</layout>