<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.inspirationpoint.remotecontrol.ui.activity.FightActivityVM" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.constraint.Guideline
            android:id="@+id/passive_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".015" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".07" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_divider_1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".085" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_show_btn_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".11" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_show_text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".19" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_show_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".14" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_show_btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".22" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_divider_2_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".24" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_def_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".265" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_def_text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".295" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_def_np_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".31" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_def_np_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".54" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_def_np_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".15" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_def_np_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".85" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_divider_3_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".56" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_hold_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".64" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_hold_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".78" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_btn_ok_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".89" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_btn_ok_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".97" />

        <android.support.constraint.Guideline
            android:id="@+id/passive_divider_4_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".87" />

        <TextView
            android:id="@+id/passive_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/fa_passive_title"
            android:textAlignment="center"
            android:textColor="@color/textColorSecondary"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/passive_title_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/passive_title_top" />

        <View
            android:id="@+id/passive_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/passive_divider_1_top" />

        <TextView
            android:id="@+id/passive_show_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@{viewModel.isPassive ? @string/dont_show : @string/show}"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/passive_show_text_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/passive_show_text_top" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/passive_show_btn"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.passiveCheck()}"
            app:layout_constraintBottom_toBottomOf="@id/passive_show_btn_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/passive_show_btn_top"/>

        <View
            android:id="@+id/passive_divider_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/passive_divider_2_top" />

        <TextView
            android:id="@+id/passive_def_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/default_value"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/passive_def_text_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/passive_def_text_top" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/passive_def_np_top"
            app:layout_constraintBottom_toBottomOf="@id/passive_def_np_bottom"
            app:layout_constraintStart_toStartOf="@id/passive_def_np_left"
            app:layout_constraintEnd_toEndOf="@id/passive_def_np_right">

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/def_p_time_houn_sec"
                android:background="@color/colorPrimaryDark"
                android:layout_toStartOf="@id/def_p_time_dec_sec"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="3"
                app:np_value="@={viewModel.timerPDefSecHoun}"
                app:np_textSize="50sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/def_p_time_dec_sec"
                android:background="@color/colorPrimaryDark"
                android:layout_centerInParent="true"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="9"
                app:np_value="@={viewModel.timerPDefSecDec}"
                app:np_textSize="50sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/def_p_time_unit_sec"
                android:background="@color/colorPrimaryDark"
                android:layout_toEndOf="@id/def_p_time_dec_sec"
                app:np_orientation="vertical"
                app:np_dividerColor="@color/transparent"
                app:np_min="0"
                app:np_max="9"
                app:np_value="@={viewModel.timerPDefSecUnit}"
                app:np_textSize="50sp"
                app:np_selectedTextSize="60sp"
                app:np_wheelItemCount="3"
                app:np_wrapSelectorWheel="false"
                app:np_selectedTextColor="@color/textColorSecondary"
                app:np_textColor="@color/white" />
        </RelativeLayout>

        <View
            android:id="@+id/def_time_divider_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/passive_divider_3_top" />

        <TextView
            android:id="@+id/passive_hold_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:text="@string/hold"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/passive_hold_bottom"
            app:layout_constraintStart_toStartOf="@id/passive_def_np_left"
            app:layout_constraintEnd_toEndOf="@id/passive_def_np_right"
            app:layout_constraintTop_toTopOf="@id/passive_hold_top"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/passive_hold_btn"
            android:background="@drawable/btn_border"
            android:onClick="@{() -> viewModel.onPassiveLock()}"
            app:layout_constraintBottom_toBottomOf="@id/passive_hold_bottom"
            app:layout_constraintStart_toStartOf="@id/passive_def_np_left"
            app:layout_constraintEnd_toEndOf="@id/passive_def_np_right"
            app:layout_constraintTop_toTopOf="@id/passive_hold_top"/>

        <View
            android:id="@+id/def_time_divider_4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/passive_divider_4_top" />

        <TextView
            android:id="@+id/passive_btn_ok"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:onClick="@{() -> viewModel.onCloseBtn()}"
            android:text="@string/ok"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/passive_btn_ok_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/passive_btn_ok_top" />

    </android.support.constraint.ConstraintLayout>

</layout>