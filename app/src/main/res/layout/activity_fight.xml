                            android:layout_width="@dimen/small_card_width"
                            android:layout_height="@dimen/small_card_height"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/small_margin"
                            android:background="@drawable/yellow" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timer_min"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="20dp"
                            android:textAlignment="textEnd"
                            android:text="00"
                            android:textSize="42sp" />

                        <TextView
                            android:id="@+id/timer_min_divider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="20dp"
                            android:text=":"
                            android:textAlignment="center"
                            android:textSize="42sp" />

                        <TextView
                            android:id="@+id/timer_sec"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="20dp"
                            android:textAlignment="textStart"
                            android:text="00"
                            android:textSize="42sp" />

                        <TextView
                            android:id="@+id/timer_sec_divider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="20dp"
                            android:text=":"
                            android:textAlignment="center"
                            android:textSize="42sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/timer_santisec"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="20dp"
                            android:textAlignment="center"
                            android:text="00"
                            android:textSize="42sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

