                <ImageButton
                    android:id="@+id/timer_start"
                    android:layout_width="@dimen/card_height"
                    android:layout_height="@dimen/card_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/cards_viev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cards_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/small_margin"
                        android:text="@string/card_title"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/large_font_size" />

                    <RelativeLayout
                        android:id="@+id/cards_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">

                        <ImageButton
                            android:id="@+id/card_left"
                            android:layout_width="36dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="@dimen/large_margin"
                            android:background="@drawable/yellow" />

                        <ImageButton
                            android:id="@+id/card_right"
                            android:layout_width="36dp"
                            android:layout_height="56dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/large_margin"
                            android:background="@drawable/yellow" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        <View
            android:id="@+id/fight_stop_timer_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#33000000"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>
